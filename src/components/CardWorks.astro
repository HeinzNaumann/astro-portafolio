---
export interface props {
    image: string;
    title: string;
    desc: string;
}

const { image, title, desc } = Astro.props;
---

<div class="bg-white rounded-md shadow-md">
    <img src={image} alt="image" class="object-cover w-full h-80" />
    <div class="p-8">
        <h3 class="text-2xl font-bold">{title}</h3>
        <p class="text-gray-500">{desc}</p>
        <slot/>
    </div>
</div>
